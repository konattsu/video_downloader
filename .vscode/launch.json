    "version": "0.2.0",
    "configurations": [

        {
            "name": "Py: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },

        {
            "name": "Py: args1, Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["${input:inputString1}"]
        },

        {
            "name": "py: args1,2, Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["${input:inputString1}", "${input:inputString2}"]
        },

        {
            "name": "py: args1,2,3, Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["${input:inputString1}", "${input:inputString2}", "${inputString3}"]
        },

        {
            "name": "Py: justMyCode, Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],

    "inputs": [
        {
            "id": "inputString1",
            "type": "promptString",
            "description": "Please input arguments'1'"
        },

        {
            "id": "inputString2",
            "type": "promptString",
            "description": "Please input arguments'2'"
        },

        {
            "id": "inputString3",
            "type": "promptString",
            "description": "Please input arguments'2'"
        }
    ]
}
